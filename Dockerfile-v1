# ğŸ—ï¸ Stage 2: Runtime
FROM node:18-alpine

WORKDIR /app

# CÃ i Ä‘áº·t Chromium trong runtime container
RUN apk update && apk add --no-cache \
  chromium \
  nss freetype freetype-dev harfbuzz ca-certificates \
  libx11 libxcomposite libxdamage libxi libxtst \
  pango cups libxrandr libxkbcommon \
  alsa-lib libxshmfence gdk-pixbuf cairo dbus \
  mesa-gl fontconfig libjpeg-turbo \
  && rm -rf /var/cache/apk/*

# Copy file build tá»« builder stage
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY package.json ./

# Äá»‹nh nghÄ©a biáº¿n mÃ´i trÆ°á»ng cho Puppeteer sá»­ dá»¥ng Chromium
